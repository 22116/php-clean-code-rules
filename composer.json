{
    "name": "lsbproject/php-clean-code-rules",
    "description": "This repository contains the most respectful (by the author meaning) rules for linters and static code analysers",
    "type": "phpcodesniffer-standard",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "victor.fedorenko",
            "email": "fedorenko22116@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "phpstan/phpstan": "^0.12.33",
        "squizlabs/php_codesniffer": "^3.5",
        "escapestudios/symfony2-coding-standard": "^3.11",
        "slevomat/coding-standard": "^7.0"
    },
    "autoload-dev": {
        "psr-4": {
            "LSBProject\\PhpCleanCodeRules\\Example\\": "example/"
        }
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs ./example",
        "phpcbf": "./vendor/bin/phpcbf ./example",
        "phpstan": "./vendor/bin/phpstan analyse example"
    }
}
